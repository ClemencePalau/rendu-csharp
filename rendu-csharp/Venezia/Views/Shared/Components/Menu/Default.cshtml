@using Venezia.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<VeneziaUser> SignInManager


<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Venezia</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="~/">Accueil</a>
        <a class="p-2 text-dark" asp-controller="Cars" asp-action="Index">Voitures</a>
        <a class="p-2 text-dark" asp-controller="Cars" asp-action="Create">Ajouter</a>
        <a class="p-2 text-dark" asp-controller="Fuels" asp-action="Index">Carburants</a>
        <a class="p-2 text-dark" asp-route="BasketUrl">Mon panier</a>
        <a class="p-2 text-dark" asp-route="RouteAbout">A propos</a>
        @*<a class="p-2 text-dark" asp-controller="Account" asp-action="register">Register</a>
            <a class="p-2 text-dark" asp-controller="Account" asp-action="login">Login</a>*@
    </nav>


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form method="post" asp-controller="account" asp-action="logout">
                <button type="submit" style="width:auto"
                        class="nav-link btn btn-link py-0">
                      Logout @User.Identity.Name
                </button>
            </form>
        </li> }
    else
    {
        <li class="nav-item">
             <a class="nav-link" asp-controller="account" asp-action="register">
                Register
             </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="account" asp-action="login">
                Login
            </a>
        </li>}




    @*<a class="btn btn-outline-primary" asp-controller="Account" asp-action="register">Register</a>
    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="login">Login</a>*@

</div>

